@model agilum.mvc.web.ViewModels.EmpresaUsuario.ListaEmpresasSelecao
@{
    var operacao = "Selecionar Empresa";
    ViewData["Title"] = operacao;
}
<h5>@ViewData["Title"]</h5>
<hr />
<section class="barra-de-menu-principal">
    <div class="barra-de-botoes-menu-principal">

        <a href="javascript:history.go(-1)" type="button" as title="Voltar" id="btnVoltar"><span class="fas fa-reply sns-tool-action" id="btnReturn"></span></a>
        <a href="#" type="button" title="Salvar dados" id="btnSalvar"><span class="fa fa-save sns-tool-action"></span></a>

        <a href="#" type="button" title="Precisa de Ajuda?" id="btnAjuda"><span class="fa fa-question sns-tool-action"></span></a>
    </div>

    <article>
        <div class="barra-de-posicao-atual" id="breadcrumb">
            <a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a> /
            <a href="#"> @operacao </a>
        </div>
    </article>
</section>
<br />
<div class="row">
    <div class="col-12">
        <form asp-action="SelecionarEmpresa" id="frmSelecEmpresa" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <vc:Summary></vc:Summary><div class="form-group">
                <div class="row" id="divNomeFantasia">
                    <div class="col-5">
                        <div class="form-group">
                            <label asp-for="IDEMPRESA" id="labelNomFant"></label>
                            <select asp-for="IDEMPRESA"
                                    asp-items="@Model?.EmpresasDisponiveisAssociacao?.Select(x => new SelectListItem(){Text = x.NMRZSOCIAL, Value = x.Id.ToString()})"
                                    class="form-control">
                                <option value="-1">** Selecionar Empresa **</option>                                
                            </select>

                        </div>
                    </div>
                </div>
               
            </div>  <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" id="btnSendForm" style="visibility:hidden" />
            </div>
        </form>
    </div>
</div>

<script src="~/local/global.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $('#btnSalvar').click(function () {
                on();
                $('#btnSendForm').click();
                off();
            });
        });
    </script>
}