@model agilum.mvc.web.ViewModels.UnidadeViewModel.UnidadeIndexViewModel
@using agilium.api.business.Enums

@{
    var inclusao = ViewBag.operacao == "I";
    var operacao = "Apagar Unidade";
    ViewData["Title"] = operacao;
}

<h5>@ViewData["Title"]</h5>
<hr />
<section class="barra-de-menu-principal">
    <div class="barra-de-botoes-menu-principal">

        <a href="javascript:history.go(-1)" type="button" as title="Voltar" id="btnVoltar"><span class="fas fa-reply sns-tool-action" id="btnReturn"></span></a>
        <a href="#" type="button" title="Salvar dados" id="btnSalvar"><span class="fa fa-save sns-tool-action"></span></a>

        <a href="#" type="button" title="Precisa de Ajuda?" id="btnAjuda"><span class="fa fa-question sns-tool-action"></span></a>
    </div>

    <article>
        <div class="barra-de-posicao-atual" id="breadcrumb">
            <a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a> /
            <a href="#"> Apagar Unidade</a>
        </div>
    </article>
</section>
<br />
<div class="callout callout-danger">
    <h3>Você deseja realmente apagar esta Unidade?</h3>
</div>
<div class="row">
    <div class="col-md-10">
        <form asp-action="Delete" id="frmDeleteUnidade" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <vc:Summary></vc:Summary>
            <input type="hidden" asp-for="Id" />
            <div class="card" id="labelcardGerais">
                <div class="card-header">
                    <h3 class="card-title text-danger">Apagar Registro</h3>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Codigo" id="labelCodigo"></label>
                                <input asp-for="Codigo" class="form-control" size="6" readonly />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label asp-for="Descricao" id="labeldescr"></label>
                                <input asp-for="Descricao" class="form-control" size="6" readonly />
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Ativo" id="labelativo"></label>
                                <select asp-for="Ativo"
                                        asp-items="Html.GetEnumSelectList<EAtivo>()"
                                        class="form-control" disabled></select>
                                <span asp-validation-for="Ativo" class="text-danger"></span>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" style="visibility:hidden" id="btnSendForm" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/local/cadastros/auxiliar/unidade.js">
    </script>
}