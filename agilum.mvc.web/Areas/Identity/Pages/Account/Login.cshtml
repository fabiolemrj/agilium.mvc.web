                        <a href="#" class="btn btn-block btn-danger">
                            <i class="fab fa-google-plus mr-2"></i>Faça login usando o Google+
                        </a>
                    </div>*@
                <!-- /.social-auth-links -->

                <p class="mb-1">
                    <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a>
                </p>
                <p class="mb-0">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registre uma nova assinatura</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>

