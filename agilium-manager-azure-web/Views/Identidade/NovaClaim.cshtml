<script src="~/dist/plugins/jquery/jquery.min.js"></script>
@model agilium.webapp.manager.mvc.ViewModels.UserClaimViewModel

@{
    ViewData["Title"] = "Nova Claim";
}

<h4>@ViewData["Title"]</h4>

<hr />
<section class="barra-de-menu-principal">
    <div class="barra-de-botoes-menu-principal">

        <a asp-action="Index" type="button" as title="Voltar" id="btnVoltar"><span class="fas fa-reply sns-tool-action" id="btnReturnCliente"></span></a>
        <a href="#" type="button" title="Salvar dados" id="btnSalvar"><span class="fa fa-save sns-tool-action" id="btnSalvarCliente"></span></a>

        <a href="#" type="button" title="Precisa de Ajuda?" id="btnAjuda"><span class="fa fa-question sns-tool-action"></span></a>
    </div>

    <article>
        <div class="barra-de-posicao-atual">
            <a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a> /
            <a href="#"> Editar Claim</a>
        </div>
    </article>
</section>
<br />
<div class="row">
    <div class="col-md-10">
        <form asp-action="NovaClaim" id="frmEdit">
            <vc:Summary></vc:Summary>
            <input type="hidden" asp-for="id" />

            <div class="card" id="labelcardGerais">
                <div class="card-header">
                    <h3 class="card-title">Dados Gerais</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="claimType " class="control-label" id="labeltypeClaim"></label>
                                <input asp-for="claimType " class="form-control" />
                                <span asp-validation-for="claimType " class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" style="visibility:hidden" id="btnSendForm" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
    <script src="~/js/dknotus-tour.min.js"></script>
    <script>
       
        $('#btnSalvar').click(function () {
            alert('teste');
            var formValido = $("#frmEdit").valid();
            if (formValido) {
                //if (ValidarFormulario()) {
                on();
               
                $('#btnSendForm').click();
                //}
            }
        });


        $(function () {
            $('#btnAjuda').click(function () {

                Tour.run([
                    {
                        element: $('#labelcardGerais'),
                        content: '<strong><div align="center" class="text-info">Dados Gerais</div></strong><p><div align="center">Area com campos com dados gerais</div></p>',
                        position: 'top'
                    },
                    {
                        element: $('#labeltypeClaim'),
                        content: '<strong><div align="center" class="text-info">Nome</div></strong><p><div align="center">Informa o descrição da claim</div></p>',
                        position: 'top'
                    },
                  
                    {
                        element: $('#btnSalvarCliente'),
                        content: '<strong><div align="center" class="text-info">Salvar</div></strong><p><div align="center">Salva os dados</div></p>',
                        position: 'right'
                    },
                ]);
            });
        });

    
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}


<script src="~/dist/js/jquery.mask.js"></script>