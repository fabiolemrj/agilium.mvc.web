@model agilium.webapp.manager.mvc.ViewModels.CaixaViewModel.CaixaMoedaViewModel
@using agilium.webapp.manager.mvc.Extensions

@{
    ViewData["Title"] = "Correção de Fechamento de Moeda";

}
<h5>@ViewData["Title"]</h5>
<hr />
<section class="barra-de-menu-principal">
    <div class="barra-de-botoes-menu-principal">
        <a href="javascript:history.go(-1)" type="button" as title="Voltar" id="btnVoltar"><span class="fas fa-reply sns-tool-action" id="btnReturn"></span></a>
        <a href="#" type="button" title="Salvar dados" id="btnSalvar"><span class="fa fa-save sns-tool-action"></span></a>
        <a href="#" title="Precisa de Ajuda?" id="btnAjuda"><span class="fa fa-question sns-tool-action"></span></a>
    </div>

    <article>
        <div class="barra-de-posicao-atual" id="breadcrumb">
            <a asp-action="Index" asp-controller="Home"> Início</a> /
            <a href="@Url.Action("IndexCaixa","Caixa")"><i class="fa fa-dashboard"></i> Caixa </a> /
            <a asp-action="IndexMoeda" asp-controller="Caixa" asp-route-idCaixa="@Model.IDCAIXA"> Moedas</a> /
              <a href="#"> Correção </a>
        </div>
    </article>
</section>
<br />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CorrecaoMoeda" id="frmCorrecaoMoeda" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" asp-route-idCaixa="@Model.IDCAIXA">
            <vc:Summary></vc:Summary>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IDMOEDA" />
            <input type="hidden" asp-for="IDCAIXA" />
            <input type="hidden" asp-for="IDUSUARIOCORRECAO" />
            <input type="hidden" asp-for="MoedaNome" />
            <input type="hidden" asp-for="CaixaNome" />
            <input type="hidden" asp-for="ValorOriginal" />
            <input type="hidden" asp-for="DataCorrecao" />
            <input type="hidden" asp-for="UsuarioCorrecao" />
            <div class="card" id="labelcardGerais">
                <div class="card-header">
                    @if (ViewBag.operacao == "I")
                    {
                        <h3 class="card-title text-success">Novo Registro</h3>
                    }
                    else
                    {
                        <h3 class="card-title text-warning">Editar Registro</h3>
                    }

                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="comment-text">
                                <span class="username" id="lbcaixa">
                                    Caixa:
                                </span>
                                <label>@ViewBag.caixa</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="comment-text">
                                <span class="username" id="lbmoeda">
                                    Moeda:
                                </span>
                                <label>@Model.MoedaNome</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="comment-text">
                                <span class="username" id="lbvalorOriginal">
                                    Valor Original do Fehcamento do Caixa:
                                </span>
                                <label>@Model.ValorOriginal.Value.ToString("N")</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ValorCorrecao" id="labelValorCorrecao"></label>
                                <input asp-for="ValorCorrecao" class="form-control"/>
                                <span asp-validation-for="ValorCorrecao" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" style="visibility:hidden" id="btnSendForm" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/local/Financeiro/caixaMoeda.js"></script>
    <script>


    </script>
 }